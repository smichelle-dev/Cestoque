@model EstoqueModel;
@{
    ViewData["Title"] = "Confirmação apagar produto";
}
<div class="text-center">
    <h3>Realmente deseja apagar esse Produto(@Model.NomeProduto)?</h3>
</div>
<a class="btn btn-primary btn-block" role="button" asp-controller="Estoque" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Estoque" asp-action="DeletarProduto">Confirmar exclusão</a>