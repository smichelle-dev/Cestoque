@model List<EstoqueModel>;
@{
    ViewData["Title"] = "Listagem de estoque";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Estoque" asp-action="CadastrarProduto">Adicionar produto</a>
    </div>
    </br>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor por unidade</th>
                <th scope="col">Valor total</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (EstoqueModel produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Id</th>
                        <td>@produto.NomeProduto</td>
                        <td>@produto.Quantidade</td>
                        <td>@produto.ValorUnidade</td>
                        <td>@produto.ValorUnidade*@produto.Quantidade</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary" asp-route-id="@produto.Id" asp-controller="Estoque" asp-action="EditarProduto">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Estoque" asp-action="ApagarProduto">Apagar</a>
                            </div>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>
