                <th scope="col">Data</th>
                <th scope="col">Mes</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>50</td>
                <td>60</td>
                <td>20</td>
                <td>5</td>
