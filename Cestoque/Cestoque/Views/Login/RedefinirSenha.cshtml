
@model RedefinirSenhaModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir senha";
}

<style>
    .container {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 400px;
        height: 400px;
        background: #ffffff;
        border-radius: 1.5rem;
    }

    body {
        margin: 0px;
        background-color: #f3f4f5;
        font-family: 'Roboto Mono', monospace;
    }

    p {
        font-size: 3rem;
        text-align: center;
        font-weight: bold;
    }

    .mensagemErro {
        margin-top: 70px;
    }

    a {
        font-size: 1rem;
        text-align: left;
        font-weight: bold;
        display: block;
       
    }
</style>


@if (TempData["MensagemErro"] != null)
{
    <div class=" mensagemErro alert alert-danger" role="alert">
        <button type="button" class="btn btn-primary btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="container ">
    <div class="box shadow p-3 ">
        <p class="align-text-top">Cestoque</p>
        <form asp-controller="Login" asp-action="EnviarLinkParaEmail" method="post">
            <div class="form-floating mb-3">
                <input type="text" asp-for="Login" class="form-control" id="floatingInput" placeholder="Usuário">

                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="form-floating">
                <input type="text" asp-for="Email" class="form-control" id="floatingInput" placeholder="Email">

                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <br />
            <button type="submit" class="btn btn-dark">Trocar Senha</button>
            <a class="btn btn-dark " asp-controller="Login" asp-action="Index" role="button">Voltar</a>
