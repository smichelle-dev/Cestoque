@model FornecedoresModel
@{
    ViewData["Title"] = "Confirmacao apagar o  fornecedores";
}

<div class="text-center">
    <h3>Realmente deseja apagar o fornecedor(Comper)?</h3>
</div>
<a class="btn btn-primary btn-block" role="button" asp-controller="Fornecedores" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button"asp-controller="Fornecedores" asp-action="Apagar"asp-route-id="@Model.Id">Confirmar exclusão</a>