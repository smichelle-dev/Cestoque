@model List<FornecedoresModel>
@{
    ViewData["Title"] = "Listagem de fornecedores";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-primary" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-primary btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<br />

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Fornecedores" asp-action="Criar">Adicionar Fornecedor</a>
    </div>
    
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Produto</th>
                <th scope="col">Valor</th>
                <th scope="col">Data</th>
                <th scope="col">Mês</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FornecedoresModel fornecedores in Model)
                {
                    <tr>
                        <th scope="row">@fornecedores.Id</th>
                        <td>@fornecedores.Fornecedor</td>
                        <td>@fornecedores.NomeProduto</td>
                        <td>R$ @fornecedores.ValorUnd</td>
                        <td>@fornecedores.Data</td>
                        <td>@fornecedores.Mes</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary" asp-route-id="@fornecedores.Id" asp-controller="Fornecedores" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@fornecedores.Id" asp-controller="Fornecedores" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
